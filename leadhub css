/* Target specific elements and change their content to Italian */
.on login-page

/* Example: Change the text of a specific element */
.element-class {
    /* This is an example of changing text content with CSS */
    content: "Nuovo testo in italiano";
}

/* Example: Change the text of all elements */
/* This is not recommended as it's not feasible to cover all text with CSS */
body * {
    /* This would override all text content, which isn't practical for translation */
    content: "Nuovo testo in italiano";
}
